            <ProgressBar android:id="@id/status_progress" android:layout_width="fill_parent" android:layout_height="wrap_content" android:indeterminate="false" android:indeterminateOnly="false" style="?android:attr/progressBarStyleHorizontal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>